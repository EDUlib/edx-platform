    %endif

    <% for course in sorted(modulestore().get_courses(), key=lambda x: (x.start is None, x.start), reverse=True):
           if not course.has_started() and course.org.lower() == "usherbrooke" and course.catalog_visibility == "both" :
              counter += 1
    %>

    %if counter !=0 :
